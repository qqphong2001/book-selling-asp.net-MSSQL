@model bookstore.Areas.Admin.Models.ShippingMethodModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

            @*<button onclick="location.href='@Url.Action("Index","shippingmethod")'" class="btn btn-secondary mt-5 mb-5">Trờ về</button>*@

            <div class="card-title">Cập nhật phương thức giao hàng</div>

            <form class="form-sample" method="post" asp-action="EditPost" asp-controller="shippingmethod">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Id</label>
                            <input type="text" class="form-control font-weight-bold" value="@Model.Id" asp-for="Id" readonly/>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Tên phương thức giao hàng</label>
                            <input type="text" class="form-control font-weight-bold" value="@Model.Name" asp-for="Name" />
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Giá</label>
                            <input type="text" class="form-control font-weight-bold" value="@Model.price" asp-for="price" />
                        </div>
                    </div>

                </div>
            

                <button type="submit" class="btn btn-success">Cập nhật</button>


            </form>
        </div>
        </div>
    </div>
</div>
