@using Microsoft.AspNetCore.Identity
@inject SignInManager<bookstore.Areas.Admin.Models.UserModel> SignInManager
@inject UserManager<bookstore.Areas.Admin.Models.UserModel> UserManager
@{
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Trang thông tin người dùng";



}
<section>
    <div class="container">
        <h3 class="title" style="padding: 20px 0;">Thông tin tài khoản</h3>

        <div class="row">

            @await Html.PartialAsync("_partialInfo.cshtml")



            <div class="col-md-10">
              
                  <div class="table-responsive">
                    <table class="table table-hover">
                        
                        <thead class="table-primary">
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Thông tin đơn hàng</th>
                                <th>Số điện thoại</th>
                                <th>địa chỉ giao hàng</th>
                                <th>Ngày đặt hàng</th>
                                <th>Giá tiền</th>
                                <th>Tình trạng</th>
                                <th>Lựa chọn</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var obj in ViewBag.order)
                            {
                                <tr>
                                    <td class="font-weight-bold">@obj.order.orderNumber</td>
                                    <td class="font-weight-bold">@obj.order.description</td>

                                    <td class="font-weight-bold">@obj.customer.phoneNumber</td>

                                    <td class="font-weight-bold">@obj.address.address</td>
                                    <td class="font-weight-bold">@obj.order.orderDate.ToString("dd.MM.yyyy")</td>
                                    <td class="font-weight-bold">@obj.order.total</td>
                                    <td class="font-weight-bold">@obj.payment.Name</td>


                                    <td>
                                        <button onclick="location.href='@Url.Action("detail","customer",new{id = obj.order.Id})'" class="btn btn-info">Xem chi tiết</button>
                                      
                                        
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>


            </div>

        </div>

    </div>
</section>
<script>
    function preview_image() {
        document.querySelector('#photo').src = URL.createObjectURL(document.getElementById("photoInput").files[0])
    }

</script>
