@{
    ViewData["title"] = "Trang chi tiết sản phẩm";
}


<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">

                <div class="aside">
                    <h3 class="aside-title">Thể loại</h3>
                    <div class="checkbox-filter">



                        @foreach (var item in ViewBag.genre)
                        {

                            <div class="input-checkbox" value="@item.GenreId">

                                <input type="checkbox" id="categoryGenre-@item.GenreId">
                                <label for="categoryGenre-@item.GenreId">
                                    <span></span>
                                    @item.GenreName <small>(@item.BookCount)</small>
                                </label>
                            </div>

                        }





                    </div>
                </div>

                <div class="aside">
                    <h3 class="aside-title">Hính thức</h3>
                    <div class="checkbox-filter">

                        <div class="input-checkbox">
                            <input type="checkbox" id="category-3">
                            <label for="category-3">
                                <span></span>
                                Bìa cứng
                            </label>
                        </div>

                        <div class="input-checkbox">
                            <input type="checkbox" id="category-4">
                            <label for="category-4">
                                <span></span>
                                Bìa mềm
                            </label>
                        </div>


                    </div>
                </div>

                <div class="aside">
                    <h3 class="aside-title">Nhà xuất bản</h3>
                    <div class="checkbox-filter">

                        @foreach (var item in ViewBag.publisher)
                        {



                            <div class="input-checkbox">
                                <input type="checkbox" id="categoryPubliser-@item.publisherId">
                                <label for="categoryPubliser-@item.publisherId">
                                    <span></span>
                                    @item.publisherName <small>(@item.BookCount)</small>
                                </label>
                            </div>
                        }


                    </div>
                </div>


                <div class="aside">
                    <h3 class="aside-title">Bán chạy</h3>

                    @foreach (var item in ViewBag.productHot)
                    {
                        <div class="product-widget" onclick="location.href='@Url.Action("productdetail","product",new {id = @item.book.Id})'">
                            <div class="product-img">
                                <img src="@item.book.cover" alt="">
                            </div>
                            <div class="product-body">
                                <p class="product-category">@item.Genre.Name</p>
                                <h3 class="product-name"><a href="#">@item.book.title</a></h3>

                                @if (item.book.discount > 0)
                                {

                                    <h4 class="product-price">@((item.book.unitPrice - (item.book.unitPrice * (item.book.discount / 100))).ToString("#,##0 đ)")) <del class="product-old-price">@item.book.unitPrice.ToString("#,##0 đ")</del></h4>

                                }
                                else
                                {
                                    <h4 class="product-price" class="product-old-price">@item.book.unitPrice.ToString("#,##0 đ")</h4>

                                }


                            </div>
                        </div>
                    }



                </div>
                <!-- /aside Widget -->
            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <label>
                            Sắp xếp theo :
                            <select class="input-select">
                                <option value="0">Giá tăng dần</option>
                                <option value="1">Giá giảm dần</option>
                                <option value="2">Bán chạy nhất</option>
                                <option value="2">Mới nhất</option>
                                <option value="2">Cũ nhất</option>
                            </select>
                        </label>

                    </div>
                </div>

                <div class="row">


                    @foreach (var item in ViewBag.bookAll)
                    {
                        <div class="col-md-4 col-xs-6">
                            <div class="product">
                                <a asp-action="productDetail" asp-controller="product" asp-route-id="@item.Book.Id">
                                    <div class="product-img">
                                        <img src=@item.Book.cover alt="">
                                    </div>
                                </a>
                                <div class="product-body">
                                    <p class="product-category">@item.Genre.Name</p>
                                    <h3 class="product-name"><a href="/">@item.Book.title</a></h3>
                                    <p class="product-category"><a href="#">@item.Author.Name</a></p>
                                    @if (item.Book.discount > 0)
                                    {

                                        <h4 class="product-price">@((item.Book.unitPrice - (item.Book.unitPrice * (item.Book.discount / 100))).ToString("#,##0 đ")) <del class="product-old-price">@item.Book.unitPrice.ToString("#,##0 đ")</h4>
                                    }
                                    else
                                    {
                                        <h4 class="product-price">@item.Book.unitPrice.ToString("#,##0 đ")</h4>
                                    }

                                </div>
                            </div>
                        </div>
                    }





                </div>

                <div class="store-filter clearfix">
                    <ul class="store-pagination">
                        <li class="active">1</li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>

            </div>

        </div>

    </div>

</div>

<script>

    $(document).ready(function () {

    })

</script>

